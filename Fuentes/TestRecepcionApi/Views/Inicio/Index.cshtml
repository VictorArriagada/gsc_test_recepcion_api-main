@model IEnumerable<PermisoCirculacionModel>
@{
    ViewData["Title"] = "Listado";
    int contador = 0;
}
<br />
<br />

<div class="container">
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Patente</th>
                    <th scope="col">Motor</th>
                    <th scope="col">Resultado</th>
                    <th scope="col">PDF</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        contador++;
                        <tr>
                            <th scope="row">@contador</th>
                            <td>@item.placa</td>
                            <td>@item.numeroMotor</td>
                            <td>@item.descripcionResultado</td>
                            <td><a target="_blank" href="~/@String.Concat(item.id_permiso_circulacion, ".pdf")">Ver</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <div class="row">
        <div class="mx-auto mt-3 mb-5">
            <button type="button" class="btn btn-primary" onclick="location.reload();">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-repeat" viewBox="0 0 16 16">
                    <path d="M11.534 7h3.932a.25.25 0 0 1 .192.41l-1.966 2.36a.25.25 0 0 1-.384 0l-1.966-2.36a.25.25 0 0 1 .192-.41zm-11 2h3.932a.25.25 0 0 0 .192-.41L2.692 6.23a.25.25 0 0 0-.384 0L.342 8.59A.25.25 0 0 0 .534 9z" />
                    <path fill-rule="evenodd" d="M8 3c-1.552 0-2.94.707-3.857 1.818a.5.5 0 1 1-.771-.636A6.002 6.002 0 0 1 13.917 7H12.9A5.002 5.002 0 0 0 8 3zM3.1 9a5.002 5.002 0 0 0 8.757 2.182.5.5 0 1 1 .771.636A6.002 6.002 0 0 1 2.083 9H3.1z" />
                </svg>
                Actualizar
            </button>
        </div>
    </div>

</div>
